-- Platoboost Hub для Android Roblox (работает на мобильном)

-- Сообщение активации
local gui = game:GetService("CoreGui")
local text = Instance.new("TextLabel")
text.Text = "Platoboost Hub Activated!"
text.Size = UDim2.new(0, 300, 0, 40)
text.Position = UDim2.new(0.5, -150, 0, 10)
text.BackgroundColor3 = Color3.fromRGB(30, 30, 40)
text.TextColor3 = Color3.fromRGB(255, 255, 255)
text.Font = Enum.Font.Code
text.TextSize = 16
text.Parent = gui

task.wait(3)
text:Destroy()

-- Сервисы
local players = game:GetService("Players")
local lp = players.LocalPlayer
local camera = workspace.CurrentCamera

-- Настройки
local esp = true
local aimlock = true
local aimkey = "Q"
local maxdist = 99

-- ESP через Part с Outline
local function createESP(player)
    if player == lp then return end
    
    local char = player.Character
    if not char then return end
    
    local box = Instance.new("Part")
    box.Name = "ESPBox"
    box.Size = Vector3.new(4, 6, 4)
    box.Transparency = 0.8
    box.Color = Color3.new(1, 1, 1)
    box.Material = Enum.Material.Neon
    box.CanCollide = false
    box.Anchored = true
    box.Parent = workspace
    
    local weld = Instance.new("Weld")
    weld.Part0 = char:FindFirstChild("HumanoidRootPart")
    weld.Part1 = box
    weld.C0 = CFrame.new(0, 0, 0)
    weld.Parent = box
    
    return box
end

-- Aim Lock через тап по экрану
local aiming = false
local aimbutton = Instance.new("TextButton")
aimbutton.Text = "AIM"
aimbutton.Size = UDim2.new(0, 80, 0, 80)
aimbutton.Position = UDim2.new(1, -90, 1, -90)
aimbutton.BackgroundColor3 = Color3.fromRGB(60, 180, 80)
aimbutton.TextColor3 = Color3.new(1, 1, 1)
aimbutton.Font = Enum.Font.Code
aimbutton.TextSize = 14
aimbutton.Parent = gui

aimbutton.MouseButton1Down:Connect(function()
    aiming = true
    while aiming and aimlock do
        -- Найти ближайшего игрока
        local closest = nil
        local dist = 9999
        
        for _, p in pairs(players:GetPlayers()) do
            if p ~= lp and p.Character then
                local head = p.Character:FindFirstChild("Head")
                if head then
                    local d = (head.Position - camera.CFrame.p).Magnitude
                    if d < dist and d < maxdist then
                        closest = p
                        dist = d
                    end
                end
            end
        end
        
        -- Целиться в голову
        if closest and closest.Character then
            local head = closest.Character:FindFirstChild("Head")
            if head then
                camera.CFrame = CFrame.new(camera.CFrame.p, head.Position)
            end
        end
        
        task.wait()
    end
end)

aimbutton.MouseButton1Up:Connect(function()
    aiming = false
end)

-- GUI меню
local menu = Instance.new("Frame")
menu.Size = UDim2.new(0, 200, 0, 150)
menu.Position = UDim2.new(0, 10, 0, 60)
menu.BackgroundColor3 = Color3.fromRGB(50, 50, 60)
menu.BorderSizePixel = 0
menu.Active = true
menu.Draggable = true
menu.Parent = gui

local title = Instance.new("TextLabel")
title.Text = "Platoboost"
title.Size = UDim2.new(1, 0, 0, 30)
title.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
title.TextColor3 = Color3.new(1, 1, 1)
title.Font = Enum.Font.Code
title.TextSize = 18
title.Parent = menu

-- ESP toggle
local espBtn = Instance.new("TextButton")
espBtn.Text = "ESP: ON"
espBtn.Size = UDim2.new(0.8, 0, 0, 30)
espBtn.Position = UDim2.new(0.1, 0, 0, 40)
espBtn.BackgroundColor3 = Color3.fromRGB(60, 180, 80)
espBtn.TextColor3 = Color3.new(1, 1, 1)
espBtn.Font = Enum.Font.Code
espBtn.TextSize = 14
espBtn.Parent = menu

espBtn.MouseButton1Click:Connect(function()
    esp = not esp
    espBtn.Text = "ESP: " .. (esp and "ON" or "OFF")
    espBtn.BackgroundColor3 = esp and Color3.fromRGB(60, 180, 80) or Color3.fromRGB(180, 60, 80)
end)

-- Aim toggle
local aimBtn = Instance.new("TextButton")
aimBtn.Text = "AIM: ON"
aimBtn.Size = UDim2.new(0.8, 0, 0, 30)
aimBtn.Position = UDim2.new(0.1, 0, 0, 80)
aimBtn.BackgroundColor3 = Color3.fromRGB(60, 180, 80)
aimBtn.TextColor3 = Color3.new(1, 1, 1)
aimBtn.Font = Enum.Font.Code
aimBtn.TextSize = 14
aimBtn.Parent = menu

aimBtn.MouseButton1Click:Connect(function()
    aimlock = not aimlock
    aimBtn.Text = "AIM: " .. (aimlock and "ON" or "OFF")
    aimBtn.BackgroundColor3 = aimlock and Color3.fromRGB(60, 180, 80) or Color3.fromRGB(180, 60, 80)
end)

-- Основной цикл ESP
local espBoxes = {}

game:GetService("RunService").RenderStepped:Connect(function()
    for _, p in pairs(players:GetPlayers()) do
        if p ~= lp and p.Character then
            local root = p.Character:FindFirstChild("HumanoidRootPart")
            if root and (root.Position - camera.CFrame.p).Magnitude < maxdist then
                if esp then
                    if not espBoxes[p] then
                        espBoxes[p] = createESP(p)
                    else
                        espBoxes[p].Parent = workspace
                    end
                else
                    if espBoxes[p] then
                        espBoxes[p].Parent = nil
                    end
                end
            else
                if espBoxes[p] then
                    espBoxes[p].Parent = nil
                end
            end
        end
    end
end)

print("Готово. Нажми кнопку AIM на экране для прицеливания.")
